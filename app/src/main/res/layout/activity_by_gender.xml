<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".byGender"
    android:background="@drawable/background_gradiant_whitebeige">

    <TextView
        android:id="@+id/txt_h_byGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_h_byGender"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.097" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_shd_c_gender"
        android:layout_width="300dp"
        android:layout_height="425dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_h_byGender">

        <TextView
            android:id="@+id/txt_c_byGender"
            android:layout_width="319dp"
            android:layout_height="475dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/txt_c_byGender"
            android:textSize="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/logo"
        android:layout_width="147dp"
        android:layout_height="38dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
        tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>